{
  "name": "taxi-booking-app",
  "version": "1.0.0",
  "description": "Full-stack taxi booking platform with React, Node.js, and Stripe",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd backend && npm run dev",
    "client:dev": "cd frontend && npm start",
    "server:build": "cd backend && npm run build",
    "client:build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start"
  },
  "keywords": ["taxi", "booking", "react", "node", "stripe", "mapbox"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}